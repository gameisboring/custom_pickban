<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>컨트롤러</title>
    <link href="/stylesheets/controller.css" rel="stylesheet" />
  </head>
  <body>
    <div id="controller">
      <select name="" id="champSelect">
        <option value="" selected>챔피언 선택..</option>
      </select>
      <button id="champSelectBtn">확인</button>
      <div id="pickban">
        <div class="blue team">
          <div class="picks">
            <% for( let index = 0; index < pick; index++ ) { %>
            <div class="pickGroup">
              <div class="back"></div>
              <div class="pick blue <%=index + 1 %>"></div>
            </div>
            <% } %>
            <h2>블루팀 픽</h2>
          </div>
          <div class="bans">
            <% for( let index = 0; index < ban; index++ ) { %>
            <div class="banGroup">
              <div class="back"></div>
              <div class="ban blue <%=index + 1 %>"></div>
            </div>
            <% } %>
            <h2>블루팀 밴</h2>
          </div>
        </div>
        <div class="red team">
          <div class="picks">
            <h2>레드팀 픽</h2>
            <% for( let index = 0; index < pick; index++ ) { %>
            <div class="pickGroup">
              <div class="back"></div>
              <div class="pick red <%=index + 1 %>"></div>
            </div>
            <% } %>
          </div>
          <div class="bans">
            <h2>레드팀 밴</h2>
            <% for( let index = 0; index < ban; index++ ) { %>
            <div class="banGroup">
              <div class="back"></div>
              <div class="ban red <%=index + 1 %>"></div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="/javascripts/jquery.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/controller.js"></script>
</html>
